<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mases"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textTituloDatosContacto_Confi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tituloDatosContacto"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTelefono_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/editCelular_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/editContactoFamiliar_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/editNumeroContacFam_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/editContactoPersonal_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/editNumeroContacPer_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/editEmailPrincipal_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/editEmailAlterno_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/editDirrecion_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/editBarrio_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <Spinner
                android:id="@+id/spinnerDepartamento_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
            </Spinner>

            <Spinner
                android:id="@+id/spinnerCiudad_DatosContacto_Confi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
            </Spinner>


        </LinearLayout>

    </ScrollView>

</LinearLayout>

